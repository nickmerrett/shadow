{
  "name": "sidecar",
  "version": "1.0.0",
  "description": "Shadow sidecar service for remote task execution",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "lint": "eslint 'src/**/*.ts'",
    "check-types": "tsc --noEmit",
    "docker:build": "docker build -f Dockerfile -t shadow-sidecar ../../",
    "docker:run": "docker run -p 8080:8080 -v $(pwd)/workspace:/workspace shadow-sidecar"
  },
  "dependencies": {
    "@repo/command-security": "*",
    "@repo/db": "*",
    "@repo/types": "*",
    "compression": "^1.7.5",
    "cors": "^2.8.5",
    "diff": "^8.0.2",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "ignore": "^6.0.2",
    "socket.io-client": "^4.7.2",
    "winston": "^3.17.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.3",
    "@types/node": "^24.0.13",
    "eslint": "^9.31.0",
    "tsx": "^4.19.2",
    "typescript": "5.8.3"
  }
}
